@model PizzaApplication.Models.Pizza

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.SelectedToppings.Count; i++)
            {
                @Html.CheckBoxFor(m => Model.SelectedToppings[i].Selected)
                @Html.HiddenFor(m => Model.SelectedToppings[i].Id)
                @Html.LabelFor(m => Model.SelectedToppings[i].Selected,
                                    Model.SelectedToppings[i].ToppingName)
                <br />
            }
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
